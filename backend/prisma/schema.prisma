generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id              String       @id @default(auto()) @map("_id") @db.ObjectId
  name            String
  email           String       @unique
  password        String
  bio             String?
  profilePic      String?
  graduationYear  Int?
  branch          String?
  degree          String?
  college         String?
  cgpa            Float?
  company         String?
  position        String?
  experienceYears Int?
  skills          String[]
  interests       String[]
  socialLinks     SocialLinks?
  connections     String[] // store User IDs as ObjectId strings
  posts           Post[]
  comments        Comment[] // ✅ added this line
  createdAt       DateTime     @default(now())

  threads  Thread[] // ✅ REQUIRED FIX
  messages Message[] // ✅ REQUIRED FIX
}

type SocialLinks {
  linkedin  String?
  github    String?
  portfolio String?
  twitter   String?
}

model Post {
  id        String    @id @default(auto()) @map("_id") @db.ObjectId
  authorId  String    @db.ObjectId
  author    User      @relation(fields: [authorId], references: [id])
  content   String
  imageUrl  String?
  createdAt DateTime  @default(now())
  likes     Int       @default(0)
  comments  Comment[]
}

model Comment {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  postId    String   @db.ObjectId
  post      Post     @relation(fields: [postId], references: [id])
  authorId  String   @db.ObjectId
  author    User     @relation(fields: [authorId], references: [id])
  content   String
  createdAt DateTime @default(now())
}

model Thread {
  id          String    @id @default(auto()) @map("_id") @db.ObjectId
  title       String
  createdById String    @db.ObjectId
  createdBy   User      @relation(fields: [createdById], references: [id])
  createdAt   DateTime  @default(now())
  messages    Message[]
}

model Message {
  id        String   @id @default(auto()) @map("_id") @db.ObjectId
  threadId  String   @db.ObjectId
  thread    Thread   @relation(fields: [threadId], references: [id])
  authorId  String   @db.ObjectId
  author    User     @relation(fields: [authorId], references: [id])
  content   String
  parentId  String?  @db.ObjectId
  upvotes   String[] // store User IDs as ObjectId strings
  edited    Boolean  @default(false)
  createdAt DateTime @default(now())
}
